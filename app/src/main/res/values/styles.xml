<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="backgroundColor">@color/backgroundDay</item>
        <item name="textColor">@color/textDay</item>
        <item name="textHintColor">@color/textHintDay</item>
        <item name="messageSend">@color/messageSendDay</item>
        <item name="messageReceive">@color/messageReceiveDay</item>
        <item name="balance">@color/balanceDay</item>
        <item name="buttonTextColor">@color/black</item>
        <item name="buttonBackGroundColor">@color/buttonDay</item>
        <item name="cardViewBackgroundColor">@color/cardBackgroundColorDay</item>
        <item name="android:spinnerItemStyle">@color/black</item>
    </style>

    <style name="AppThemeDark" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="backgroundColor">@color/backgroundDark</item>
        <item name="textColor">@color/textDark</item>
        <item name="textHintColor">@color/textHintDark</item>
        <item name="messageSend">@color/messageSendDark</item>
        <item name="messageReceive">@color/messageReceiveDark</item>
        <item name="balance">@color/balanceDark</item>
        <item name="buttonTextColor">@color/white</item>
        <item name="buttonBackGroundColor">@color/buttonDark</item>
        <item name="cardViewBackgroundColor">@color/cardBackgroundColorDark</item>
        <item name="android:spinnerItemStyle">@color/white</item>
    </style>

</resources>
